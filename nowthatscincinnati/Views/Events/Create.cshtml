@model nowthatscincinnati.Models.Events

<h2 class="modal-title">Create Event</h2>
<hr />
<form id="create-event-form" asp-action="Create" enctype="multipart/form-data">
    <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue" class="control-label"></label>
                <input asp-for="Venue" class="form-control" />
                <span asp-validation-for="Venue" class="text-danger"></span>
            </div>
            <p class="control-label upload-label">Image</p>
            <div id="file-input" class="form-group">
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <label class="custom-file-label"></label>
                        <input asp-for="Upload" class="form-control custom-file-input" type="file" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="VenueLink" class="control-label"></label>
                <input asp-for="VenueLink" class="form-control" />
                <span asp-validation-for="VenueLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacebookLink" class="control-label"></label>
                <input asp-for="FacebookLink" class="form-control" />
                <span asp-validation-for="FacebookLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <div class="form-group d-inline-block">
                <input id="create-event-submit-btn" type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group d-inline-block">
                <input id="create-event-back-btn" type="button" value="Back" class="btn btn-light" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
